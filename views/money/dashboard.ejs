<%- include("../partials/header") %>

<div class="ui sizer vertical segment">
  <div class="ui huge header">Dashboard</div>
</div>
<div class="ui sizer vertical segment">
  <div class="ui large header">Balance: $<%= balance %></div>
</div>

<div class="ui segment">
  <div class="ui large header">Activity</div>
</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Sender ID</th>
      <th>Recipient ID</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% for (i = 0; i < transactions.length; i++) { %>
    <tr>
      <td data-label="Date"><%= transactions[i].date %></td>
      <td data-label="Sender ID"><%= transactions[i].sender_id %></td>
      <td data-label="Recipient ID"><%= transactions[i].recipient_id %></td>
      <td data-label="Amount"><%= transactions[i].amount %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<%- include("../partials/footer") %>
