<%- include("../partials/header") %> <% if(sucess_message){ %>
<div class="ui positive message">
  <i class="close icon"></i>
  <div class="header">
    <%= sucess_message %>
  </div>
</div>
<% } %>

<div class="ui sizer vertical segment">
  <div class="ui huge header">Dashboard</div>
</div>
<div class="ui sizer vertical segment">
  <div class="ui large header">Balance: $<%= balance %></div>
</div>

<div class="ui segment">
  <div class="ui large header">Transactions</div>
</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Sender ID</th>
      <th>Recipient ID</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% for (i = 0; i < transactions.length; i++) { %>
    <tr>
      <td data-label="Date"><%= transactions[i].date %></td>
      <td data-label="Sender ID"><%= transactions[i].sender_id %></td>
      <td data-label="Recipient ID"><%= transactions[i].recipient_id %></td>
      <td data-label="Amount"><%= transactions[i].amount %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<div class="ui segment">
  <div class="ui large header">New Funds</div>
</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Bank ID</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% for (i = 0; i < addFundsTransactions.length; i++) { %>
    <tr>
      <td data-label="Date"><%= addFundsTransactions[i].date %></td>
      <td data-label="Sender ID"><%= addFundsTransactions[i].bank %></td>
      <td data-label="Amount"><%= addFundsTransactions[i].amount %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<div class="ui segment">
  <div class="ui large header">Withdrawals</div>
</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Bank ID</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% for (i = 0; i < cashoutTransactions.length; i++) { %>
    <tr>
      <td data-label="Date"><%= cashoutTransactions[i].date %></td>
      <td data-label="Sender ID"><%= cashoutTransactions[i].bank %></td>
      <td data-label="Amount"><%= cashoutTransactions[i].amount %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<%- include("../partials/footer") %>
